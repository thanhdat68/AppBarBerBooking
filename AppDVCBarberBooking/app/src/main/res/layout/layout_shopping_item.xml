<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_salon"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="4dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_gravity="center"
           >

            <ImageView
                android:id="@+id/img_shopping_item"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_image_black_24dp"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/txt_name_shopping_item"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/bellerose"
                android:layout_gravity="center"
                android:padding="5dp"
                android:text="Hair style wax"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_margin="10dp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_price_shopping_item"
                android:text="20$"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:fontFamily="@font/bellerose"
                android:layout_width="0dp"
                android:gravity="left"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_add_to_cart"
                android:text=" "
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:fontFamily="@font/bellerose"
                android:layout_width="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:drawableRight="@drawable/ic_shopping_cart_black_24dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>